{
  "name": "will-mag-api",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "images:dev": "wrangler dev src/cloudflare.ts",
    "images:deploy": "wrangler deploy --minify",
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "build:win": "pnpm run clean:dist && tsc && tsc-alias && pnpm run build:post:win",
    "build:post:win": "if not exist dist\\src\\generated\\prisma mkdir dist\\src\\generated\\prisma && xcopy /E /I /Y /H src\\generated\\prisma\\* dist\\src\\generated\\prisma\\ && tsx scripts/fix-imports.ts",
    "build:post": "mkdir -p dist/src/generated/prisma && cp -r src/generated/prisma/* dist/src/generated/prisma/ && tsx scripts/fix-imports.ts",
    "build": "pnpm run clean:dist && tsc && tsc-alias && pnpm run build:post",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:seed": "dotenv tsx src/db/seed.ts",
    "clean": "rm -rf node_modules",
    "clean:dist": "rm -rf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-openapi": "^0.19.8",
    "@prisma/client": "^6.12.0",
    "@scalar/hono-api-reference": "^0.9.2",
    "better-auth": "^1.3.4",
    "cloudflare": "^5.0.0",
    "dotenv": "^17.0.1",
    "dotenv-expand": "^12.0.2",
    "googleapis": "^154.1.0",
    "hono": "^4.8.12",
    "hono-pino": "^0.9.1",
    "nanoid": "^5.1.5",
    "nodemailer": "^7.0.5",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.8.2",
    "sharp": "^0.34.3",
    "stoker": "1.4.3",
    "stripe": "^18.4.0",
    "uploadthing": "^7.7.3",
    "xlsx": "^0.18.5",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.3",
    "@faker-js/faker": "^9.9.0",
    "@types/busboy": "^1.5.4",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "fs-extra": "^11.3.0",
    "prisma": "^6.12.0",
    "prisma-zod-generator": "^1.1.0",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1",
    "wrangler": "^4.34.0"
  }
}
